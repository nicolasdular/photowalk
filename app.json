{
  "name": "thexstack",
  "scripts": {
    "dokku": {
      "predeploy": "./thexstack/bin/thexstack eval 'Thexstack.Release.migrate'"
    }
  },
  "checks": {
    "web": {
      "attempts": 3,
      "interval": 10,
      "timeout": 5,
      "http": {
        "path": "/up",
        "status": 200
      }
    }
  }
}
